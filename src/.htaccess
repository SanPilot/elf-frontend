# Config for Apache server

# Generic options
Options FollowSymLinks
Options -Indexes
Require all granted
Allow from all

# Error page
ErrorDocument 404 /pages/error/404.html
ErrorDocument 403 /pages/error/404.html

# X-Frame-Options header (security)
<IfModule headers_module>
Header always append X-Frame-Options SAMEORIGIN
</IfModule>

# Deflate output
<IfModule deflate_module>
SetOutputFilter DEFLATE
SetEnvIfNoCase Request_URI "\.(?:gif|jpe?g|png)$" no-gzip
</IfModule>

# Caching
<IfModule expires_module>
ExpiresActive On
ExpiresDefault "access plus 1 day"
</IfModule>

# Re-mapped URLs for Polymer
<IfModule rewrite_module>
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}components%{REQUEST_URI} -f [OR]
RewriteCond %{DOCUMENT_ROOT}components%{REQUEST_URI} -d
RewriteRule ^(.*)$ /components/$1 [L]
</IfModule>
